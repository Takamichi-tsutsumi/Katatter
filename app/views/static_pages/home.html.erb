<h1>Katatter</h1>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/tweet_form' %>
      </section>
    </aside>
    <div class="spna8">
      <h3>Timeline</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>welcome to katatter</h1>
    <%= link_to "Sign up", signup_path, class:"btn btn-large btn-primary" %>
  </div>
<% end %>
