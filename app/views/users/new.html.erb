<% provide(:title, "New User") %>

<h1>Create an account!!</h1>
<%= form_for(@user) do |f| %>
<div class="field">
<%= f.label :name %>
<%= f.text_field :name, size: 30, maxlength: 50 %><br>

<%= f.label :email %>
<%= f.text_field :email, size: 30, maxlength: 255 %><br>

<%= f.label :password %>
<%= f.password_field :password, size: 30 %><br>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation, size: 30 %><br>
</div>
<div class="actions">
<%= f.submit %>
</div>
<% end %>
