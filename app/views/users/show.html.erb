<% provide(:title, @user.name)  %>
<div class="row">
  <aside class="col-md-4">
    <section>
    <%= render "/shared/user_info" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.tweets.any? %>
      <ul class="tweets">
        <%= render @tweets %>
      </ul>
      <%= will_paginate @tweets %>
    <% end %>
  </div>
</div
